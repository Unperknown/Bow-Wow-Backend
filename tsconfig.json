{
  "compilerOptions": {
    "module": "es6",
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": ".build",
    "baseUrl": "./",
    "rootDir": "./",
    "paths" : {
      "*": ["*"],
    },
    "typeRoots": ["/node_modules/@types", "/@types"],
    "types": ["node"],
    "noImplicitAny": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "pretty": true,
    "esModuleInterop": true,
  },
  "include": [
    "handler.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}