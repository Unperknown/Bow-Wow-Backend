{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths" : {
      "*": ["*", "src/*"]
    },
    "sourceMap": true,
    "typeRoots": ["/node_modules/@types", "/@types"],
    "pretty": true
  },
  "include": [
    "./src/**/*",
    "./test/*"
  ],
  "exclude": [
    "node_modules"
  ]
}